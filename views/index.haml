!!!
%html{:lang => 'ja'}
  %head
    %meta{:charset => 'UTF-8'}
    %meta{:name => 'description', :content => 'The color image of the Sphere.'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %link{:href => '/favicon.ico', :rel => 'shortcut icon'}
    %link{:href => '//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', :rel => 'stylesheet'}
    %link{:href => '//fonts.googleapis.com/css?family=Ubuntu:400,700', :rel => 'stylesheet'} 
    %link{:href => 'style.css', :rel => 'stylesheet'} 

    %title Sphere Colors
    %script{:type => 'text/javascript'}
      :plain
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-23712459-3']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  %body
    %a{:href => 'https://github.com/hogewest/Sphere-Colors'}
      %img{:style => 'position: absolute; top: 0; right: 0; border: 0;', :src => 'https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png', :alt => 'Fork me on GitHub'}
    .container
      %header
        #title
          %h1 Sphere Colors
      .row
        %div{:class => 'col-sm-12'}
          %div{:class => "grid grid-large #{@sphere['color']}"}
            = @sphere['name']
      .row
        - @sphere['members'].each do |member|
          %div{:class => 'col-sm-3'}
            %div{:class => "grid grid-normal #{member['color']}"}
              = member['name']
      - @sphere['songs'].each_slice(3) do |songs|
        .row
          - songs.each do |song| 
            %div{:class => 'col-sm-4'}
              %div{:class => "grid grid-small #{song['color']}"}
                = song['title']
