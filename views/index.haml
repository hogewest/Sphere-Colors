!!!
%html{:lang => 'ja'}
  %head
    %meta{:charset => 'UTF-8'}
    %meta{:name => 'description', :content => 'The color image of the Sphere.'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}

    %link{:href => '/favicon.ico', :rel => 'shortcut icon'}
    %link{:href => 'bootstrap.min.css', :rel => 'stylesheet'}
    %link{:href => '//fonts.googleapis.com/css?family=Ubuntu:400,700', :rel => 'stylesheet'} 

    :css
      body {
        background-image: url('./background.png');
        margin-bottom: 60px;
        font-family: 'Ubuntu', cursive;
      }
      h1 {
        font-size: 72px;
        line-height: 96px;
        margin-top: 60px;
        font-weight: 700;
      }
      #title {
        text-align: center;
        margin-bottom: 60px;
      }
      .grid {
        text-align: center;
        border-radius: 26px;
        margin-bottom: 25px;
      }
      .grid-large {
        height: 64px;
        line-height: 64px;
        font-size: 40px;
      }
      .grid-normal {
        height: 50px;
        line-height: 50px;
        font-size: 26px;
      }
      .grid-small {
        height: 40px;
        line-height: 40px;
        font-size: 16px;
      }
      .red {
        background-color: #C6485B;
        color: #fff;
      }
      .blue {
        background-color: #029EBC;
        color: #fff;
      }
      .yellow {
        background-color: #F4C504;
        color: #fff;
      }
      .green {
        background-color: #7EBA03;
        color: #fff;
      }
      .pink {
        background-color: #E184A5;
        color: #fff;
      }
      .purple {
        background-color: #8C177E;
        color: #fff;
      }
      .orange {
        background-color: #F79708;
        color: #fff;
      }
      .white {
        background-color: #FFF;
        color: #000;
      }
    %title Sphere Colors
  %body
    %a{:href => 'https://github.com/hogewest/Sphere-Colors'}
      %img{:style => 'position: absolute; top: 0; right: 0; border: 0;', :src => 'https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67', :alt => 'Fork me on GitHub', 'data-canonical-src' => 'https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png'}
    .container
      %header
        #title
          %h1 Sphere Colors
      .row
        %div{:class => 'col-sm-12'}
          %div{:class => "grid grid-large #{@sphere['color']}"}
            = @sphere['name']
      .row
        - @sphere['members'].each do |member|
          %div{:class => 'col-sm-3'}
            %div{:class => "grid grid-normal #{member['color']}"}
              = member['name']
      - @sphere['songs'].each_slice(3) do |songs|
        .row
          - songs.each do |song| 
            %div{:class => 'col-sm-4'}
              %div{:class => "grid grid-small #{song['color']}"}
                = song['title']
    %script{:type => 'text/javascript'}
      :plain
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-23712459-3']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
